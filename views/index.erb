<head>
<!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<head>

<div class="container">
<h2>Here are your Restaurants:</h2>
<% @restaurants.each do |restaurant| %>

        <div class="row">
            <div class="card mt-2 mb-2 col" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= restaurant.name %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.address %></h6>
                    <p class="card-text"><%= restaurant.description %></p>
                    <a href="/restaurant/<%= restaurant.id %>" class="card-link">View Restaurant</a>
                </div>
            </div>
        </div>
<% end %>
</div>


